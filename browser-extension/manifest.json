{
  "manifest_version": 3,
  "name": "Aynary Dictionary",
  "version": "0.1.0",
  "description": "Define words with Aynary dictionary",
  "permissions": [
    "contextMenus",
    "nativeMessaging",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "Aynary Dictionary"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

